<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent">


    <TextView
        android:text="Text to be Encrypted:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:gravity="start"
        android:hint="Enter text to be encrpted"
        android:id="@+id/Text_to_be_encrpted"
        android:layout_width="match_parent"
        android:layout_height="40dp" />



    <TextView
        android:layout_marginTop="10dp"
        android:text="Encrypted Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:editable="true"
        android:id="@+id/EncrptedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="5dp"
        android:text="decrypted Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/decrptedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/EncryptButton"
        android:text="Encrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/DecryptButton"
        android:text="Decrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/myClear"
        android:src="@android:drawable/ic_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/myShare"
        android:src="@drawable/ic_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>